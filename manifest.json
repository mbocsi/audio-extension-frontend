{
    "name": "Audio extension",
    "version": "0.1.0",
    "description": "An extension that recognizes audio from a tab",
    "permissions": ["tab"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["https://*.youtube.com/*"],
        "js": ["contentScript.js"]
    }],
    "web_accessible_resources": [
        {"resources": []}
    ],
    "action": {
        "default_icon": {
            "16": "test-images/icon-16.png",
            "48": "test-images/icon-48.png",
            "32": "test-images/icon-32.png",
            "128": "test-images/icon-128.png"
        }
    },
    "default_title": "Audio title",
    "default_popup": "popup.html",
    "manifest_version": 3
}