{
  "name": "Audio extension",
  "version": "0.1.0",
  "description": "An extension that recognizes audio from a tab",
  "permissions" : [
    "activeTab"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "content_scripts": [{
      "matches": ["https://*.youtube.com/*"],
      "js": ["contentScript.js"]
  }],
  "web_accessible_resources": [
      {"resources": ["test-images/icon-16.png"], "matches": ["https://*.youtube.com/*"]}
  ],
  "icons": {
      "16": "test_images/icon-16.png",
      "48": "test_images/icon-48.png",
      "32": "test_images/icon-32.png",
      "128": "test_images/icon-128.png"
  },
  "action": {
      "default_icon": {
          "16": "icon-16.png",
          "48": "icon-48.png",
          "32": "icon-32.png",
          "128": "icon-128.png"
      },
      "default_title": "Audio title",
      "default_popup": "index.html"
  },
  "manifest_version": 3
}